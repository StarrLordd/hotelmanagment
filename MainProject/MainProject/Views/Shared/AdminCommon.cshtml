    Layout = null;
}
@using MainProject.Models;
@using System.Data;
<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="x-ua-compatible" content="ie=edge">

  <title>Welcome to Admin Pannel</title>

  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
  <!-- IonIcons -->
    <link href="~/Content/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Theme style -->
    <link href="~/Content/css/hover.css" rel="stylesheet" />
  <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <script src="~/Content/js/jquery-3.4.1.min.js"></script>

    <script>
        $(document).ready(function () {
            var url = location.href;

            mainurl = url.substring(url.lastIndexOf("/") + 1)
            if (mainurl == "Welcome") {
                $(".mdash").addClass("active");
            }
            else if (mainurl == "ManageRoom")
                $(".room").addClass("active");
            else if (mainurl == "ManageSlider")
                $(".slr").addClass("active");
            else if (mainurl == "ManageImage")
                $(".gal").addClass("active");
            else if (mainurl == "ManageVideo")
                $(".gal").addClass("active");
        });
    </script>
    <style>
        .main-sidebar{
            position: fixed;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini">
<div class="wrapper">
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light" >
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Home</a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Contact</a>
      </li>
    </ul>

    <!-- SEARCH FORM -->
   

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      
      
      <!-- Notifications Dropdown Menu -->
      <li class="nav-item dropdown">
        <a class="nav-link" data-toggle="dropdown" href="#">
          <i class="far fa-bell"></i>
          <span class="badge badge-warning navbar-badge">15</span>
        </a>
       
      </li>
      <li class="nav-item">
        <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#"><i
            class="fas fa-th-large"></i></a>
      </li>
    </ul>
  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
   

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
          @{
              DBManager Dbm = new DBManager();
              string cmd = "select Ad_name, Ad_Image from Admin";
              DataTable dt = Dbm.ExecuteSelect(cmd);
              foreach (DataRow dr in dt.Rows)
              {
                  <div class="image">
                    <img src="/Content/ReceptionistImage/@dr["Ad_Image"]" class="img-circle elevation-2" alt="User Image">
                  </div>
          
                    <div class="info">
                        <a href="#" class="d-block">@dr["Ad_name"]</a>
                    </div>
              }
          }
        
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item has-treeview">
            <a href="/Admin/Welcome" class="nav-link mdash">
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>
                Dashboard
                
              </p>
            </a>
            
          </li>
          <li class="nav-item has-treeview">
            <a href="/Admin/ManageRoom" class="nav-link room">
              <i class="nav-icon fas fa-hotel"></i>
              <p>
               Manage Rooms
                
      
              </p>
            </a>
          
          </li>
          <li class="nav-item has-treeview">
            <a href="#" class="nav-link gal">
               
              <i class="nav-icon fas fa-photo-video"></i>
              <p>
                Gallery
                <i class="fas fa-angle-left right"></i>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item img">
                <a href="/Admin/ManageImage" class="nav-link vgal">
                  
                    <i class="fas fa-images nav-icon"></i>
                  <p>Image Gallery</p>
                </a>
              </li>
              <li class="nav-item vid">
                <a href="/Admin/ManageVideo" class="nav-link igal">
                  <i class="fas fa-video nav-icon"></i>
                  <p>Video Gallery</p>
                    
                </a>
              </li>
              
            </ul>
          </li>
          <li class="nav-item has-treeview">
            <a href="#" class="nav-link rec">
              <i class="nav-icon fas fa-users"></i>
              <p>
                Manage Receptionist
                <i class="fas fa-angle-left right"></i>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="/Admin/AddReception" class="nav-link arec">
                  <i class="fas fa-user-plus nav-icon"></i>
                  <p>Add Receptionist</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/Admin/ManageReceptionist" class="nav-link brac">
                  <i class="fas fa-user-slash nav-icon"></i>
                  <p>Manage Receptionist</p>
                </a>
              </li>
          
            </ul>
          </li>
          <li class="nav-item has-treeview">
            <a href="/Admin/ManageSlider" class="nav-link slr">
              <i class="nav-icon fas fa-exchange-alt"></i>
              <p>
               
                Manage Slider
              </p>
            </a>
           
          </li>
          <li class="nav-item has-treeview">
            <a href="/Admin/ManageEnquiry" class="nav-link enq">
              <i class="nav-icon fas fa-comment-dots"></i>
              <p>
              Manage Enquiry
              </p>
            </a>
          
          </li> 
             <li class="nav-item has-treeview">
            <a href="#" class="nav-link fb">
              <i class="nav-icon fas fa-comments"></i>
              <p>
              Manage Feebcak
              </p>
            </a>
          
          </li>
             <li class="nav-item has-treeview">
            <a href="/Admin/SendSMS" class="nav-link sms">
              <i class="nav-icon fas fa-sms"></i>
              <p>
              Send SMS
              </p>
            </a>
          
          </li>
             <li class="nav-item has-treeview">
            <a href="/Admin/SendEmail" class="nav-link email">
              <i class="nav-icon fas fa-mail-bulk"></i>
              <p>
              Send Email
              </p>
            </a>
          
          </li>
             <li class="nav-item has-treeview">
            <a href="/Admin/MyProfile" class="nav-link pro">
              <i class="nav-icon fas fa-user-circle"></i>
              <p>
             My Profile
              </p>
            </a>
          
          </li>
             <li class="nav-item has-treeview">
            <a href="/Admin/logout" class="nav-link">
              <i class="nav-icon fas fa-sign-out-alt"></i>
              <p>
              Logout
              </p>
            </a>
          
          </li>
          
          
          
          
         
          
         
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
