    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
         
                  <div class="image">
                    <img src="/Content/ReceptionistImage/@dr["Rec_Images"]" class="img-circle elevation-2" alt="User Image">
                  </div>
          
                    <div class="info">
                        <a href="#" class="d-block">@dr["Rec_Name"]</a>
