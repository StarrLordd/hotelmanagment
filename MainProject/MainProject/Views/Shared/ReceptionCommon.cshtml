  <meta http-equiv="x-ua-compatible" content="ie=edge">

  <title>Welcome to Admin Pannel</title>

  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
  <!-- IonIcons -->
    <link href="~/Content/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Theme style -->
    <link href="~/Content/css/hover.css" rel="stylesheet" />
  <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <script src="~/Content/js/jquery-3.4.1.min.js"></script>

    <script>
        $(document).ready(function () {
            var url = location.href;

            mainurl = url.substring(url.lastIndexOf("/") + 1)
            if (mainurl == "Welcome") {
                $(".mdash").addClass("active");
            }
            else if (mainurl == "ManageRoom")
                $(".room").addClass("active");
            else if (mainurl == "ManageSlider")
                $(".slr").addClass("active");
            else if (mainurl == "ManageImage")
                $(".gal").addClass("active");
            else if (mainurl == "ManageVideo")
                $(".gal").addClass("active");
        });
    </script>
    <style>
        .main-sidebar{
            position: fixed;
        }
    </style>
</head>
   
<body class="hold-transition sidebar-mini">
<div class="wrapper">
     @{
              DBManager Dbm = new DBManager();
              string cmd = "select Rec_Name, Rec_Images from Receptionist";
              DataTable dt = Dbm.ExecuteSelect(cmd);
              foreach (DataRow dr in dt.Rows)
              {
