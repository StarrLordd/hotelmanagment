@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/AdminCommon.cshtml";
}
@using MainProject.Models;
@using System.Data;
<link href="~/Content/css/style.css" rel="stylesheet" />

 <section id="testimonials" class="section-bg wow fadeInUp">
      <div class="container">

        <header class="section-header">
          <h3>My Portfolio</h3>
        </header>

        <div class="owl-carousel testimonials-carousel col-sm-12">
             @{
                                DBManager Dbm = new DBManager();
                                string cmd = "select *from Admin";
                                DataTable dt = Dbm.ExecuteSelect(cmd);
                                foreach(DataRow dr in dt.Rows)
                                {
           <div class="row">
               <div class="col-sm-1"></div>
               <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-4">
                           
                                    <div class="testimonial-item col-sm-3">
                                        <div class="col-sm-12 use">
                                            <img src="/Content/ReceptionistImage/@dr[2]" class="testimonial-img" alt=""/>
            
                                
                                        </div>
                                    </div>
                                
                            <br /><br />
                            <div style="border:2px dotted blue;padding:2%;">
                                <h3 class="text-center">Update Your Image</h3>
                                @using (Html.BeginForm("MyProfile", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <div class="form-group">
                
                                       <input type="file" name="file" class="form-control" />
                                    </div>
                                    <div class="text-center"><input type="submit" value="Click Here"></div>
                                }
                            </div>
                         </div>   
                        <div class="col-sm-8">
                            <div class="row" style="padding-left:20%;">
                                
                                <table  cellpadding="10" style="width:100%;">
                                    <tr>
                                        <td>Username :</td>
                                        <td><b>@dr[0]</b></td>
                                    </tr>
                                    <tr>
                                        <td>Name : </td>
                                        <td><b>@dr[1]</b></td>
                                    </tr>
                                    <tr>
                                        <td>Email ID : </td>
                                        <td><b>@dr[4]</b></td>
                                    </tr>
                                    <tr>
                                        <td>Mobile Number : </td>
                                        <td><b>@dr[3]</b></td>
                                    </tr>
                                </table> 
                                <br /><br />
                                <div class="text-center"><a href="/Admin/UpdatePro"><input type="button" value="Update Profile Info"></a></div>
                                <div class="text-center" style="margin-left:2%;"><a href="/Admin/ChangePassword?id=@dr[0]"><input type="button" value="Change Password"></a></div>

                            </div>
                        </div>
                    </div>
               </div>
               <div class="col-sm-1"></div>
           </div>
             }
             }
         </div>
        </div>

      
    </section>

