@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Views/Shared/AdminCommon.cshtml";
}
<style>
    .form-control {
       
        width:95%;
    }
</style>
<link href="~/Content/css/style.css" rel="stylesheet" />
<div class="col-sm-12">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <section id="contact" class="section-bg wow fadeInUp">
      <div class="container">
           <div class="section-header">
          <h3>Send Email</h3>
          
        </div>
       

       

        <div class="form" id="enq">
          
         
        @using(Html.BeginForm("SendEmail","Admin",FormMethod.Post,new{role="form", @class="contactForm"})){
           
            <script>
        $(document).ready(function () {
            $("#spcc").click(function () {
                $("#pcc").slideToggle("slow");
            });
        });
    </script>
            <div class="form-group" style="width:100%;">
                <script src="~/Content/js/main.js"></script>
                @Html.TextBox("SendTo",null,new{@class="form-control", type="email", placeholder="Send To"})
                <span id="spcc" style="cursor:pointer;color:blue;float:right;margin-top:-3.5%;">CC</span>
               
            </div>
            
               
             <div id="pcc" style="display:none" class="form-group">
                
                @Html.TextBox("CC",null,new{@class="form-control", type="email", placeholder="CC"})
               <div class="validation"></div>
            </div>
            <div class="form-group">
              
               @Html.TextBox("subject",null,new{@class="form-control",placeholder="Subject"})
                <div class="validation"></div>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
              <div class="validation"></div>
            </div>
            <div class="form-group">
              
               Attachment: <input type="file" class="form-control" name="Att" />
                <div class="validation"></div>
            </div>
            <div class="text-center"><input type="submit" value="Send Email"></div>
         
        
        }
             @if (TempData["msg"] != null)
             {
              <span style="color:red;">@TempData["msg"]</span>
         }
        </div>

      </div>
    </section>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>

